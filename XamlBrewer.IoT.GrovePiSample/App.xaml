<Application x:Class="XamlBrewer.IoT.GrovePiSample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:XamlBrewer.IoT.GrovePiSample"
             RequestedTheme="Light">
    <Application.Resources>
        <!-- Theme Resources -->
        <!-- Header -->
        <SolidColorBrush x:Key="TitlebarBackgroundBrush"
                         Color="#FF404040" />
        <SolidColorBrush x:Key="StatusbarBackgroundBrush"
                         Color="DimGray" />
        <!-- Splitview Pane -->
        <SolidColorBrush x:Key="SplitViewBackgroundBrush"
                         Color="DarkBlue" />
        <SolidColorBrush x:Key="SplitViewForegroundBrush"
                         Color="White" />
        <SolidColorBrush x:Key="SplitViewHighlightBrush"
                         Color="OrangeRed" />
        <!-- Splitview Content -->
        <SolidColorBrush x:Key="PageBackgroundBrush"
                         Color="White" />
    </Application.Resources>
</Application>
